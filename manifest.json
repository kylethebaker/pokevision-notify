{
  "name": "PokeVision Scanner",
  "version": "1.0.4",
  "description": "Scans PokeVision.com and creates desktop notification for new pokemon spawns",
  "manifest_version": 2,
  "browser_action": {
    "name": "Manipulate DOM",
    "icons": ["icon.png"],
    "default_icon": "icon.png",
	"default_popup": "popup.html"	
  },
  "background": {
	"scripts":["jquery-2.0.2.min.js", "background.js"]
  },
   "permissions": [
   "geolocation",
	"notifications",
	"<all_urls>"
    //"https://pokevision.com/*",
    //"http://pokevision.com/*",
	//"http://ugc.pokevision.com/*"
    ]
}