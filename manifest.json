{
  "name": "Pokemon Go: Spawn Notifications",
  "version": "1.1.2",
  "description": "Scans PokeVision.com and creates desktop notifications when Pokemon spawn near you.",
  "manifest_version": 2,
  "browser_action": {
    "name": "Manipulate DOM",
    "icons": ["icon.png"],
    "default_icon": "icon.png",
	"default_popup": "popup.html"	
  },
  "background": {
	"scripts":["jquery-2.0.2.min.js", "App/App.js", "App/helpers.js", "App/PokemonService.js", "App/ChromeService.js", "background.js"]
  },
   "permissions": [
    "geolocation",
	"notifications",
	"http://ugc.pokevision.com/*",
	"https://pokevision.com/*"
    ]
}